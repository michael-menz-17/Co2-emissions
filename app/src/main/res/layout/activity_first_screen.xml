<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="24dp"
    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Country's Emissions"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#222"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTotalTitle"
            android:text="Total CO2 Emissions (1750â€“2022):"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#444"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTotalValue"
            android:textSize="18sp"
            android:textColor="#666"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvAvgTitle"
            android:text="Average Emissions per Capita:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#444"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvAvgValue"
            android:textSize="18sp"
            android:textColor="#666"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvYearTitle"
            android:text="Year with Highest Emissions:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#444"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvYearValue"
            android:textSize="18sp"
            android:textColor="#666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnBackHome"
            android:text="Back to Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="#388E3C"
            android:textColor="#fff"/>
    </LinearLayout>
</ScrollView>
